<h1>Register</h1>

<%= form_for @user do |f| %>

  <%= f.label :name, 'Name' %>
  <%= f.text_field :name %>
  <%= f.label :password, 'Password' %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation, 'Password again' %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit 'Login' %>

<% end %>